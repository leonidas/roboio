  div.modal
    position absolute
    width 600px
    top 150px
    left 50%
    margin-left -300px
    background-color white
    padding 30px
    font-family Arial, sans-serif
    -webkit-border-radius 20px
    -moz-border-radius 20px
    border-radius 20px
    -webkit-box-shadow inset 0px 0px 6px 0px #6c7379
    -moz-box-shadow inset 0px 0px 6px 0px #6c7379
    box-shadow inset 0px 0px 6px 0px #6c7379
    behavior url('/PIE.htc')

    p, h2
      margin-bottom 20px

    a
      color #005499
      text-decoration none

    a:hover
      color #003e71
      text-decoration underline

#robodata
  display none
