*
  zoom 1

html, body
  height 100%

body
  background #0068B5
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif

#video
  position relative

#header
  height 68px
  // Old browser
  background #005499
  // FF3.6+
  background -moz-linear-gradient(top,  #005499 0%, #0068b5 100%)
  // Chrome, Safari 4+
  background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#005499), color-stop(100%,#0068b5))
  // Chrome 10+, Safari 5.1+
  background -webkit-linear-gradient(top,  #005499 0%,#0068b5 100%)
  // Opera 11.10+
  background -o-linear-gradient(top,  #005499 0%,#0068b5 100%)
  // IE 10+
  background -ms-linear-gradient(top,  #005499 0%,#0068b5 100%)
  // W3C
  background linear-gradient(to bottom,  #005499 0%,#0068b5 100%)
  // IE6-9
  filter s("progid:DXImageTransform.Microsoft.gradient( startColorstr='#005499', endColorstr='#0068b5',GradientType=0 )")

  h1
    display none

  @media all and (min-width: 1020px)
    // Show the title only if browser screen is wide enough
    h1
      display inline-block
      float left
      color #5dbbe1
      font 1.5em/66px Arial, sans-serif
      margin-left 30px
      text-shadow 0 -1px 0 #003662

  > a
    text-decoration none

  .navi
    display none
    margin-left 35px
    float left
    height 65px
    list-style none
    float left

    a
      text-decoration none
      color #FFF
      display block
      height 65px

    li
      float left
      padding 2px 24px 0 24px
      margin-right 2px
      font 1.1em/65px Arial, sans-serif
      position relative

      .arrow
        width 16px
        height 9px
        background url('../img/arrow.png') no-repeat left top
        display none
        margin 0 auto -9px auto

    li.active, li:hover
      // Old browsers
      background #005499
      // FF 3.6+
      background -moz-linear-gradient(top,  #005499 0%, #169fd6 100%)
      // Chrome, Safari 4+
      background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#005499), color-stop(100%,#169fd6))
      // Chrome 10+, Safari 5.1+
      background -webkit-linear-gradient(top,  #005499 0%,#169fd6 100%)
      // Opera 11.10+
      background -o-linear-gradient(top,  #005499 0%,#169fd6 100%)
      // IE10+
      background -ms-linear-gradient(top,  #005499 0%,#169fd6 100%)
      // W3C
      background linear-gradient(to bottom,  #005499 0%,#169fd6 100%)
      // IE6-9
      filter s("progid:DXImageTransform.Microsoft.gradient( startColorstr='#005499', endColorstr='#169fd6',GradientType=0 )")

    li.active
      .arrow
        display block
        position relative
        z-index 1000

#content
  position absolute
  top 68px
  bottom 10px
  left 10px
  right 10px
  padding 24px 12px 0 12px
  background #FFF url('../img/tile.png')
  -webkit-border-radius 20px
  -moz-border-radius 20px
  border-radius 20px
  -webkit-box-shadow inset 0px 0px 6px 0px #6c7379
  -moz-box-shadow inset 0px 0px 6px 0px #6c7379
  box-shadow inset 0px 0px 6px 0px #6c7379
  behavior url('/PIE.htc')

  .text
    input, label
      color #4D4D4D
      font 1em/1.5em Arial, sans-serif

    label
      display inline-block
      margin-top 5px
      width 150px

    input[type="submit"].login
      margin 20px 20px 20px 100px

    input[type=submit][disabled=disabled]
      color #8c8c8c

    p, a
      color #4D4D4D
      font 1em/1.5em Arial, sans-serif
      margin 1.2em 0

    a
      color #005499
      text-decoration none

    a:hover
      color #003e71

    .errmsg
      color #ef5638

    .hidden
      display none

  .error
    width 250px
    margin 1em auto 0 auto
    color #6e7880
    font 1.1em/2em Arial, sans-serif
    text-align center
    padding-top 196px
    text-shadow 0 1px 0 #FFF

#logout
  float right
  font 1em Arial, sans-serif
  color #AAA
  padding 10px
  margin 15px

  a, a:visited
    color #FFF
    text-decoration none

  a:hover
    color #5dbbe1

